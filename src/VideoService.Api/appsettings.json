{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDbSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "wechat_videos"
  },
  "JwtSettings": {
    "Secret": "your-super-secret-jwt-key-change-this-in-production-minimum-32-characters",
    "Issuer": "WeChat.AuthService",
    "Audience": "WeChat.API",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "RedisSettings": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "WeChat:Video:"
  },
  "VideoSettings": {
    "MaxFileSizeMB": 500,
    "AllowedFormats": [ "mp4", "mov", "avi", "mkv", "webm" ],
    "ThumbnailCount": 3,
    "ShortsMaxDurationSeconds": 60,
    "StorageProvider": "GCS",
    "GCSBucket": "wechat-videos",
    "CDNBaseUrl": "https://cdn.wechat.com/videos"
  }
}
