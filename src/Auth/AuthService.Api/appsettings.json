{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=wechat_auth;Username=postgres;Password=postgres;Include Error Detail=true",
    "AuthDb": "Host=localhost;Port=5432;Database=wechat_auth;Username=postgres;Password=postgres;Include Error Detail=true"
  },
  "JwtSettings": {
    "Secret": "your-super-secret-jwt-key-change-this-in-production-minimum-32-characters",
    "Issuer": "WeChat.AuthService",
    "Audience": "WeChat.API",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "RedisSettings": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "WeChat:Auth:"
  },
  "SendGrid": {
    "ApiKey": "your-sendgrid-api-key-here",
    "FromEmail": "noreply@wechat.com",
    "FromName": "WeChat"
  },
  "Twilio": {
    "AccountSid": "your-twilio-account-sid-here",
    "AuthToken": "your-twilio-auth-token-here",
    "PhoneNumber": "+1234567890"
  },
  "AppUrl": "http://localhost:3000"
}
