{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Information"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": ["http://localhost:3000", "http://localhost:3001"],
  "ConnectionStrings": {
    "MongoDB": "mongodb://localhost:27017",
    "Redis": "localhost:6379"
  },
  "MongoDB": {
    "DatabaseName": "wechat_notifications"
  },
  "JwtSettings": {
    "Secret": "your-super-secret-jwt-key-change-this-in-production-minimum-32-characters",
    "Issuer": "WeChat.AuthService",
    "Audience": "WeChat.API",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "NotificationSettings": {
    "FirebaseCredentialsPath": "config/firebase-service-account.json",
    "EnablePushNotifications": true,
    "EnableEmailNotifications": true,
    "EmailFrom": "notifications@wechat.com",
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "EnableSsl": true,
    "NotificationTTLDays": 30
  }
}
