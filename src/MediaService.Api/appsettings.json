{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": ["http://localhost:3000", "http://localhost:3001"],
  "ConnectionStrings": {
    "MongoDB": "mongodb://localhost:27017",
    "Redis": "localhost:6379"
  },
  "MongoDB": {
    "DatabaseName": "wechat_media"
  },
  "JwtSettings": {
    "Secret": "your-super-secret-jwt-key-change-this-in-production-minimum-32-characters",
    "Issuer": "WeChat.AuthService",
    "Audience": "WeChat.API",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "MediaSettings": {
    "StorageProvider": "Local",
    "LocalStoragePath": "./uploads",
    "MaxFileSize": 104857600,
    "MaxImageSize": 10485760,
    "MaxVideoSize": 524288000,
    "AllowedImageExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".bmp"],
    "AllowedVideoExtensions": [".mp4", ".avi", ".mov", ".wmv", ".flv", ".webm"],
    "AllowedAudioExtensions": [".mp3", ".wav", ".ogg", ".m4a", ".aac"],
    "AllowedDocumentExtensions": [".pdf", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx", ".txt"],
    "ImageCompressionQuality": 85,
    "ThumbnailWidth": 300,
    "ThumbnailHeight": 300,
    "CDNBaseUrl": ""
  },
  "GoogleCloudStorage": {
    "ProjectId": "",
    "BucketName": "wechat-media",
    "CredentialsPath": "",
    "PublicUrlBase": ""
  },
  "AWS": {
    "AccessKeyId": "",
    "SecretAccessKey": "",
    "Region": "us-east-1",
    "S3BucketName": "wechat-media",
    "CloudFrontDistribution": ""
  }
}
