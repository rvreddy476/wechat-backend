{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Secret": "your-super-secret-jwt-key-change-this-in-production-minimum-32-characters",
    "Issuer": "WeChat.AuthService",
    "Audience": "WeChat.API",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "user-profile-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated"
      },
      "user-profile-public-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/{userId}/followers"
        }
      },
      "user-profile-public-route-2": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/{userId}/following"
        }
      },
      "user-profile-search-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/search"
        }
      },
      "user-profile-trending-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/trending"
        }
      },
      "user-profile-by-id-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/{userId:guid}"
        }
      },
      "user-profile-by-username-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/username/{username}"
        }
      },
      "auth-health-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/health"
        }
      },
      "userprofile-health-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/userprofile/health"
        }
      },
      "posts-route": {
        "ClusterId": "postfeed-cluster",
        "Match": {
          "Path": "/api/posts/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated"
      },
      "posts-public-route": {
        "ClusterId": "postfeed-cluster",
        "Match": {
          "Path": "/api/posts/{postId}"
        }
      },
      "posts-feed-route": {
        "ClusterId": "postfeed-cluster",
        "Match": {
          "Path": "/api/posts/feed/{**catch-all}"
        }
      },
      "posts-trending-route": {
        "ClusterId": "postfeed-cluster",
        "Match": {
          "Path": "/api/posts/trending"
        }
      },
      "posts-search-route": {
        "ClusterId": "postfeed-cluster",
        "Match": {
          "Path": "/api/posts/search"
        }
      },
      "posts-hashtag-route": {
        "ClusterId": "postfeed-cluster",
        "Match": {
          "Path": "/api/posts/hashtag/{**catch-all}"
        }
      },
      "comments-route": {
        "ClusterId": "postfeed-cluster",
        "Match": {
          "Path": "/api/comments/{**catch-all}"
        }
      },
      "reactions-route": {
        "ClusterId": "postfeed-cluster",
        "Match": {
          "Path": "/api/reactions/{**catch-all}"
        }
      },
      "chats-route": {
        "ClusterId": "chat-cluster",
        "Match": {
          "Path": "/api/chats/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated"
      },
      "messages-route": {
        "ClusterId": "chat-cluster",
        "Match": {
          "Path": "/api/messages/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated"
      },
      "chat-hub-route": {
        "ClusterId": "chat-cluster",
        "Match": {
          "Path": "/hubs/chat"
        },
        "AuthorizationPolicy": "authenticated"
      },
      "postfeed-health-route": {
        "ClusterId": "postfeed-cluster",
        "Match": {
          "Path": "/postfeed/health"
        }
      },
      "chat-health-route": {
        "ClusterId": "chat-cluster",
        "Match": {
          "Path": "/chat/health"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "user-profile-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "postfeed-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003"
          }
        }
      },
      "chat-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5004"
          }
        }
      }
    }
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": 60,
    "QueueLimit": 10
  }
}
