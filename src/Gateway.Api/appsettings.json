{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Secret": "your-super-secret-jwt-key-change-this-in-production-minimum-32-characters",
    "Issuer": "WeChat.AuthService",
    "Audience": "WeChat.API",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "user-profile-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated"
      },
      "user-profile-public-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/{userId}/followers"
        }
      },
      "user-profile-public-route-2": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/{userId}/following"
        }
      },
      "user-profile-search-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/search"
        }
      },
      "user-profile-trending-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/trending"
        }
      },
      "user-profile-by-id-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/{userId:guid}"
        }
      },
      "user-profile-by-username-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/userprofile/username/{username}"
        }
      },
      "auth-health-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/health"
        }
      },
      "userprofile-health-route": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/userprofile/health"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "user-profile-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      }
    }
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": 60,
    "QueueLimit": 10
  }
}
